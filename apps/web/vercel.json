{
  "buildCommand": "cd ../.. && pnpm install && pnpm --filter web build",
  "outputDirectory": ".next",
  "installCommand": "echo 'Skip install, handled by buildCommand'",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=60, stale-while-revalidate"
        }
      ]
    }
  ]
}

