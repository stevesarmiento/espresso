{
  "name": "solana-analytics-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Community-facing Solana analytics platform powered by Jetstreamer",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:web": "pnpm --filter web dev",
    "build": "turbo run build",
    "build:web": "pnpm --filter web build",
    "build:streamer": "cd apps/streamer && cargo build --release",
    "start:web": "pnpm --filter web start",
    "start:streamer": "cd apps/streamer && ./scripts/start-production.sh",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\""
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "prettier": "^3.4.2",
    "turbo": "^2.3.6",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.19.0"
}
